<h1> My profile </h1>

<div class="row">
  <div class="col-xs-12 col-md-6">
    <%= simple_form_for(@user) do |f| %>
      <%= f.error_notification %>

      <%= f.input :first_name %>
      <%= f.input :last_name %>
      <%= f.input :address %>
      <%= f.input :zipcode %>
      <%= f.input :city %>
      <%= f.input :email %>
      <%= f.input :phone_number %>
      <%= f.input :sex %>
      <%= f.input :description %>

      <%= f.button :submit, "Save my profile" %>
    <% end %>
  </div>
</div>
