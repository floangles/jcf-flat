<div id="bg_signin">
  <div class="container">
  <div class="row">
    <div class="col-xs-offset-8 col-xs-4 ">
        <h3 class="h3">
          Sign in buddy !
        </h3>
    </div>
  </div>
</div>



<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="container">
  <div class="row">
    <div class="col-xs-offset-8 col-xs-4">
      <span class="form-inputs">
        <%= f.input :email, required: false, autofocus: true %>
        <%= f.input :password, required: false %>
        <%= f.input :remember_me, as: :boolean %>
        <%= f.button :submit, "Log in",class: "btn btn-danger soft-signbtn "%>
        <% end %>
      </span>
        <%= link_to "Sign up", new_registration_path(resource_name), class: "btn btn-success soft-signbtn " %>
        <%= link_to "Password ?", new_password_path(resource_name), class: "btn btn-primary soft-signbtn " %>

    </div>
  </div>
</div>

