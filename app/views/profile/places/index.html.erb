

<div class="container">
  <div class="row text-center med-padded-bottom">
    <h2>My places</h2>
    <% if @places.size == 0 %>
      <p>You have no place registered</p>
      <br>
      <br>
      <br>
    <% end %>

    <% @places.each do |place| %>
      <div class="col-sm-4">
        <div class="card">
        <h3> <%= place.name %> </h3>
        <%= image_tag place.picture, class: "pic-index image" %>
        <h4> price : <%= place.rate %></h4>
        <p> city : <%= place.city %></p>
        <p> available : <%= place.available %></p>
        <%= link_to "Delete", profile_place_path(place),
          method: :delete,
          data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
        <%= link_to "show", profile_place_path(place), class: "btn btn-success" %>
        </div>
      </div>
    <% end %>

  </div>
  <div class="text-center">
    <p><%= link_to "Add a new place", new_profile_place_path, class: "btn btn-success" %></p>
    <br>
  </div>
</div>

