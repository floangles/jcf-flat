
<div class="container">
  <div class="row text-center med-padded-bottom">
    <h2>My trips </h2>
    <% if @trips.size == 0 %>
      <p>You have no trip registered</p>
      <br>
      <br>
      <br>
    <p><%= link_to "Search for new places", root_path, class: "btn btn-success" %></p>
    <% end %>
    <% @trips.each do |trip| %>
      <div class="col-sm-4">
        <div class="card">
        <h3> <%= trip.place.name %> </h3>
        <div class="relative">
          <%= image_tag trip.place.picture, class: "pic-index image" %>
          <div>
            <h4 class="position-price2"> <%= trip.place.rate %> â‚¬</h4>
            <div class="position-statut">
              <% if Time.now.to_i < (Time.parse(trip.checkin.to_s).to_i) %>
                <% if trip.status %>
                  <h4>Status: <%= trip.status %></h4>
                <% else %>
                  <h4>Status: Pending</h4>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
        <p class="small-padded-top"><strong> City :</strong> <%= trip.place.city %></p>
        <p><strong> guests : </strong> <%= trip.guests %></p>
        <p> <strong>Checkin: </strong> <%= trip.checkin %></p>
        <p> <strong>Checkout: </strong> <%= trip.checkout %></p>


        <%= link_to "Cancel my reservation", profile_trip_path(trip),
          method: :delete,
          data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
        <%= link_to "show", profile_trip_path(trip), class: "btn btn-success" %>

        </div>

      </div>
    <% end %>
  </div>
</div>












