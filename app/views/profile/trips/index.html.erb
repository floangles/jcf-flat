
<div class="container">
  <div class="row text-center med-padded-bottom">
    <h2>My trips </h2>
    <% if @trips.size == 0 %>
      <p>You have no trip registered</p>
      <br>
      <br>
      <br>
    <% end %>
    <p><%= link_to "Search for new places", root_path, class: "btn btn-success" %></p>
    <% @trips.each do |trip| %>
      <div class="col-sm-4">
        <div class="card">
        <h3> <%= trip.place.name %> </h3>
        <%= image_tag trip.place.picture, class: "pic-index image" %>
        <h4> price : <%= trip.place.rate %></h4>
        <p> city : <%= trip.place.city %></p>
        <p> Number of guests : <%= trip.guests %></p>
        <p> checkin : <%= trip.checkin %></p>
        <p> checkout : <%= trip.checkout %></p>
        <%= link_to "Cancel my reservation", profile_trip_path(trip),
          method: :delete,
          data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
        <%= link_to "show", profile_trip_path(trip), class: "btn btn-success" %>
        </div>
      </div>
    <% end %>
  </div>
</div>












