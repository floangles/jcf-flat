<div class="image_div text-center">
</div>

<div class="container med-padded-top med-padded-bottom">
    <div class="row">
      <div class="col-sm-6">
        <h3 class=""><%= @trip.place.name%></h3>
        <br>
        <p><b>Rate: </b><%= @trip.place.rate%> euros</p>
        <p><b>Address in <%= @trip.place.city%></b>: <%= @trip.place.address%> <%= @trip.place.zipcode%></p>
        <p><b>Description: </b><%= @trip.place.description%></p>
        <p>Up to <%= @trip.place.capacity%> <b>guests</b></p>
        <p><%= @trip.place.rooms%> <b>rooms</b></p>
        <p><%= @trip.place.beds%> <b>beds</b></p>
        <!-- <p class="med-padded-bottom">available :<%= @trip.place.available%></p> -->
        <%= link_to "Back to the list", profile_trips_path, class: "btn btn-primary" %>
      </div>
      <div class="col-sm-6">
        <div class=" text-center" >
          <h3>Booking informations</h3>
          <br>
          <h5 class= "">From : <%= @trip.checkin.httpdate.first(16)%></h5>
          <h5>To: <%= @trip.checkout.httpdate.first(16) %></h5>
          <h5>Number of guests : <%= @trip.guests%></h5>
          <br>
          <h5>Your host is: <%= @trip.user.first_name %> <%= @trip.user.last_name.upcase %></h5>
          <p><%= image_tag @trip.user.picture.url(:thumb), class: "img-circle" %></p>
        </div>
      </div>
    </div>
  </div>



<style media="screen">
  .image_div { background-image: url(<%= @trip.place.picture %>);
    position: relative;
    padding: 300px 0;
    background-size: cover;
    background-position: center center;
   }
</style>



