<div class="container">
  <div class="row text-center med-padded-bottom">
    <h1> History </h1>
    <% @rentings.each do |renting| %>
      <div class="col-sm-4">
        <div class="card">
          <div class="guest_info">
            <h3>You got a request for:</h3>
            <%= image_tag renting.place.picture, class: "pic-index image img_places img-circle" %>
            <div class="field_align">
              <p>
                <b>Name</b> : <%= renting.place.name %>
              </p>
              <p>
                <b>Adress</b> : <%= renting.place.address %>
                <%= renting.place.zipcode %> <%= renting.place.city %></p>
               <p>
                <b>Checkin</b> : <%= renting.checkin %>
              </p>
              <p>
                <b>Checkout</b> : <%= renting.checkout %>
              </p>
              <p>
              <% if renting.status %>
                <b>Status</b>: <%= renting.status %>
              <% else %>

              <% end %>

              </p>
            </div>
          </div>
          <div class="place_info">
            <h3>GUEST INFOS :</h3>
            <div class="field_align">
              <%= image_tag renting.user.picture, class: "img-circle img_guest" %>
              <p><b>Name</b> : <%= renting.user.first_name %>
               <%= renting.user.last_name %> </p>
              <p> <b>email</b> : <%= renting.user.email %></p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>



