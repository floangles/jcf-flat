</div>


  <div class="container med-padded-top med-padded-bottom">
    <div class="row">
      <div class="col-sm-6">
        <div class="card">
          <h3><%= @place.name%></h3>
          <br>
          <p><em>Rate per night</em>: <%= @place.rate%> euros</p>
          <p><em>Address</em>: <%= @place.address%> - <%= @place.zipcode%> <%= @place.city%></p>
          <p><%= @place.capacity%> <em>persons</em></p>
          <p><%= @place.rooms%> <em>rooms</em></p>
          <p><%= @place.beds%> <em>beds</em></p>
          <p><em>Description<em>: <%= @place.description%></p>
          <!-- <h5><b>Available<b> :<%= @place.available%></h5> -->
          <br>
          <p class="text-center"><%= link_to "Back to the list", profile_places_path, class: "btn btn-primary" %>
          </p>
        </div>
      </div>


      <div class="col-sm-6">
        <div class="card text-align">
          <%= simple_form_for [@place, @booking] do |f| %>
            <div class="text-center booking-form">
              <%= f.error_notification %>
              <%= f.input :guests %>
              <%= f.input :checkin, as: :date, html5: true %>
              <%= f.input :checkout, as: :date, html5: true %>
              <%= f.button :submit %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <html>
  <body>
    <div id="map" style='width: 100%; height: 670px;'></div>

    <script src="https://maps.google.com/maps/api/js?sensor=false" type="text/javascript"></script>
    <script src="https://google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js" type="text/javascript"></script>

    <script src="https://wagon-google-maps-markers.herokuapp.com/assets/application-5034196864c74ae1cc5f12e6d1f71223.js" type="text/javascript"></script>

    <script type="text/javascript">
      $(document).on('ready', function() {
        handler = Gmaps.build('Google');
        handler.buildMap({ internal: { id: 'map' } }, function(){
          markers = handler.addMarkers([
              { "lat": 48.8426531, "lng": 2.3248288 },
              { "lat": 48.8718757, "lng": 2.3500763 },
              { "lat": 48.8755557, "lng": 2.3768895 },
              { "lat": 48.8529369, "lng": 2.364178  }
            ]);
          handler.bounds.extendWith(markers);
          handler.fitMapToBounds();
        });
      })
    </script>
  </body>
</html>




